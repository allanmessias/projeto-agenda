<%- include('includes/head'); %> <%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <%- include('includes/messages'); %>
      <h1 class="text-center">Agenda</h1>
      <% if (user) { %>
      <p class="text-center lead">
        Bem vindo <%= String(user[0].email).split('@')[0] %>
      </p>
      <% } %>
      <p class="text-center lead">Seus contatos est√£o abaixo</p>
      <% if(contact.length> 0 && user) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <% if (idUser=idUserOnContact) { %> <% contact.forEach(contacts=> { %>
          <tr>
            <td><%= contacts.firstname %></td>
            <td><%= contacts.surname %></td>
            <td><%= contacts.tel %></td>
            <td><%= contacts.email %></td>
            <td>
              <a
                href="/contato/index/<%= String(user[0].email).split('@')[0]%>/<%= contacts._id %>"
                >Editar</a
              >
            </td>
            <td>
              <a
                class="text-danger"
                href="/contato/delete/<%= String(user[0].email).split('@')[0]%>/<%= contacts._id %>"
                >Excluir</a
              >
            </td>
          </tr>
          <% }) %> <% } %> <% } %>
        </table>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>
